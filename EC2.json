{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "EC2 Template",
	"Parameters":
	{
		"keyPair": 
		{
			"Type": "AWS::EC2::KeyPair::KeyName"
		},
		"SubnetId":
		{
		    "Type":"AWS::EC2::Subnet::Id"
		}
	},
	"Resources":
	{
		"EC2Instance": 
		{
			"Type": "AWS::EC2::Instance",
			"Properties":
			{
			    "Tags" : [
			        {
			        "Key" : "Name","Value" : "DemoInstance"
			    }			    
			     ],
				"ImageId": "ami-ee6f5e8b",
				"InstanceType": "t2.micro",
				"KeyName": 
				{
					"Ref": "keyPair"
				},
				"NetworkInterfaces":
				[{

                                "GroupSet":[{"Fn::ImportValue" : {"Fn::Sub" : "demosg-SecurityGroupID"}}],
                                "DeviceIndex":"0",
                                "AssociatePublicIpAddress":"true",
                                "DeleteOnTermination":"true",
                                "SubnetId" :
                                        { 
                                             "Ref" : "SubnetId"
        
                                        }
				    
			     }],
              "IamInstanceProfile" : 
                                {
                                     "Ref" : "InstanceProfile"
         	                    }
           }
        },
	
    

        		 
		"InstanceProfile" : 
		{
     	"Type" : "AWS::IAM::InstanceProfile",
     	"Properties" : {
         "Path" : "/",
         "Roles" : [
         	{
           "Ref" : "ListS3BucketsRole"
        	}
                     ]
          }   
    },
"Policy" : {
     	"Type" : "AWS::IAM::Policy",
     	"Properties" : {
      "PolicyName" : "BucketsPolicy",
      "PolicyDocument" : {
        "Statement" : [
           	{
            "Effect" : "Allow",
             	"Action" : [
              "s3:List*"
             	   ],
             	"Resource" : "*"
           	}
         	]
},
       "Roles" : [
         {
           "Ref" : "ListS3BucketsRole"
         }
       ]
     }
   },
"ListS3BucketsRole" : {
     "Type" : "AWS::IAM::Role",
     "Properties" : {
       "AssumeRolePolicyDocument": {
         "Version" : "2012-10-17",
         "Statement" : [
           {
             "Effect" : "Allow",
             "Principal" : {
               "Service" : ["ec2.amazonaws.com"]
             },
             "Action" : [
               "sts:AssumeRole"
             ]
           }
         ]
       },
       "Path" : "/"
     }
   }
 }


}
